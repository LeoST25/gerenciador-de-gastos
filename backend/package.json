{
  "name": "gerenciador-gastos-backend",
  "version": "1.0.0",
  "description": "Backend para gerenciador de gastos com IA",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:suppress": "nodemon -r ./suppress-warnings.js src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "npm run db:migrate && npm start",
    "test": "jest",
    "db:migrate": "npx knex migrate:latest",
    "db:seed": "npx knex seed:run"
  },
  "keywords": [
    "typescript",
    "express",
    "sqlite",
    "ai",
    "financial"
  ],
  "author": "Gerenciador de Gastos",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.9",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
